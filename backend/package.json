 {
  "name": "sit-council-backend",
  "version": "1.0.0",
  "description": "Backend for SIT Council Meeting Management System with full authentication, real-time features, and MongoDB integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:watch": "nodemon --inspect server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:auth": "jest tests/auth.test.js",
    "test:meetings": "jest tests/meetings.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "node scripts/seedDatabase.js",
    "seed:dev": "node scripts/seedDatabase.js --dev",
    "seed:prod": "node scripts/seedDatabase.js --prod",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "heroku-postbuild": "npm install",
    "deploy": "git push heroku main",
    "deploy:full": "npm run build && npm run deploy",
    "docs": "apidoc -i routes/ -o docs/",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "docker:build": "docker build -t sit-council-backend .",
    "docker:run": "docker run -p 5000:5000 sit-council-backend",
    "docker:compose": "docker-compose up",
    "docker:compose:build": "docker-compose up --build"
  },
  "keywords": [
    "student-council",
    "meeting-management",
    "mongodb",
    "express",
    "socket.io",
    "real-time",
    "authentication",
    "jwt",
    "passport"
  ],
  "author": "Taha-HB <taha@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Taha-HB/sit-council.git"
  },
  "bugs": {
    "url": "https://github.com/Taha-HB/sit-council/issues"
  },
  "homepage": "https://github.com/Taha-HB/sit-council#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    // Core
    "express": "^4.18.2",
    "mongoose": "^7.0.0",
    
    // Security & Authentication
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-google-oauth20": "^2.0.0",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.0.0",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "cors": "^2.8.5",
    
    // Validation
    "express-validator": "^7.0.1",
    "validator": "^13.9.0",
    
    // Real-time
    "socket.io": "^4.6.1",
    
    // File Upload & Processing
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.0",
    "pdfkit": "^0.14.0",
    "html-pdf": "^3.0.1",
    
    // Utilities
    "dotenv": "^16.0.3",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.9.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.3",
    "axios": "^1.4.0",
    
    // Documentation
    "swagger-ui-express": "^4.6.3",
    "swagger-jsdoc": "^6.2.8",
    
    // Testing
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^8.13.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^2.8.8",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "cross-env": "^7.0.3",
    "faker": "^6.6.6",
    "apidoc": "^0.54.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/docs/"
    ],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
 }
